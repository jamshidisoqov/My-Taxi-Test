<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyTaxiTest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CircleImageStyle" parent="Theme.MyTaxiTest">
        <item name="cornerSize">50%</item>
    </style>

    <style name="NavTextStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.07</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.InnerLeft" parent="Theme.MyTaxiTest">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/margin_std</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/margin_std</item>
        <item name="cornerSizeBottomRight">0dp</item>

    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.InnerRight" parent="Theme.MyTaxiTest">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">@dimen/margin_std</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">@dimen/margin_std</item>

    </style>

</resources>